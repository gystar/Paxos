{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "${workspaceFolder}/src/main.cpp", //工作区内，执行多个关联c文件，但只有一个main()
                "${workspaceFolder}/src/lib/*.cpp", //工作区内，执行多个关联c文件，但只有一个main()
                "${workspaceFolder}/src/Paxos/*.cpp", //工作区内，执行多个关联c文件，但只有一个main()
                "-lpthread",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}